@import 'lib';

* {
  box-sizing: border-box;
}

body {
  background-color: $background-color;
  color: $normal-text;
  font-family: helvetica, sans-serif;
  margin: 0;
}

a {
  color: $mild-blue;
}

.global-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding: $min-padding;
  width: 100%;
}

.primary-header {
  border-bottom: 1px solid $faded-mild-blue;
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
  height: $header-height;
  justify-content: space-between;
  width: 100%;

  > * {
    text-align: center;
    width: 100%;
  }
}

h1 {
  font-size: 20px;
  font-weight: 200;
  margin: 0;
}

img.gear {
  margin-left: 15px;
  vertical-align: text-bottom;
}

.dataset-datestamp {
  margin: 8px 0;
}

.primary-header-link {
  text-decoration: none;

  &:hover {
    border-bottom: 1px solid $mild-blue;
  }
}

main {
  padding: 0 $med-padding;
}

.error {
  color: #ff7f7f;
}

@media $base-tablet {
  .global-wrapper > main {
    display: flex;
  }

  .primary-header {
    justify-content: space-between;
    padding: $med-padding $med-padding $med-padding+$min-padding;
    margin-bottom: $med-padding;

    > * {
      align-self: center;
      text-align: left;
      width: auto;
    }

    .sign-in-wrapper {
      width: 100%;
    }
  }
}

@media $base-desktop {
  .primary-header .sign-in-wrapper {
    width: auto;
  }
}
