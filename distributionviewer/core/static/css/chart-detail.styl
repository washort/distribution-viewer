@import 'lib';

.chart-detail {
  width: 100%;

  .chart {
    height: 60vh;
    margin: $med-padding auto $lrg-padding;
    width: 100%;
  }

  p {
    font-size: 14px;
    font-weight: 100;
  }

  .chart-rollover-table {
    width: 100%;
  }
}

.options {
  float: right;
}

.show-outliers {
  display: flex;
  align-items: center;
}

.react-ios-switch-Switch-switch {
  margin-left: $min-padding;
}

@media $base-tablet {
  .chart-detail {
    padding: 0 $med-padding;
  }
}
