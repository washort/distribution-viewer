@import 'lib';

.axis {
  path,
  line {
    fill: none;
    stroke: $mild-blue;
  }
}
.line {
  fill: none;
  stroke: $mild-blue;
  stroke-width: 2px;
}
.tick {
  text {
    fill: $chart-gray;
    font-size: 11px;
    font-weight: 100;
  }
  line {
    opacity: 0.2;
  }
}
.focus {
  display: none;

  circle {
    fill: #000;
    stroke: $mild-blue;
    stroke-width: 2px;
  }
}
.hover-zone {
  fill: none;
  pointer-events: all;
}
.tooltip {
  display: none;
  font-size: 11px;
  font-weight: 200;
  letter-spacing: 1px;
  line-height: 20px;
  padding: 5px;
  pointer-event: none;
  position: absolute;
  right: 20px;
  text-align: center;
  text-shadow: 0 0.5px 0.5px $mild-blue;
  top: 40%;
  width: 240px;
}
